{
  "productName": "UMBRA",
  "version": "0.1.0",
  "identifier": "com.umbra.chat",
  "build": {
    "frontendDist": "ui/public"
  },
  "app": {
    "windows": [
      {
        "title": "UMBRA - Quantum-Safe Messaging",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  }
}
